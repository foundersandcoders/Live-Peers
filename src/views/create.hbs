<h1>We are LivePeers!</h1>
<h3>Simply create a new session</h3>
<!-- Create form -->
<form class="login" action="/create" method="post">
  <fieldset>
    <legend>Create new session</legend>
      <label for="username">Username</label>
        <input id="username" name="username" type="text" placeholder="Enter your username" pattern="^[A-Za-z0-9]{3,25}$" title="Username should be a minimum of three alphanumeric characters, with no spaces"/>
      <br />
      <label for="password">Password</label>
        <input id="password" name="password" type="password" placeholder="Enter your password" />
      <br />
      <label for="roomName">Session name</label>
        <input id="roomName" name="roomName" type="text" placeholder="Enter a session name" pattern="^[A-Za-z0-9\s]+$" title="Session name should be a mimum of three alphanumeric characters, and can have spaces"/>
      <br />
      <label for="submit">Submit</label>
        <input type="submit"/>
  </fieldset>
</form>
